//CurrencyConverter-XML/src/main/resources/beans.xml

  <beans xmlns="http://www.springframework.org/schema/beans" 
     xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
     xsi:schemaLocation="http://www.springframework.org/schema/beans
     http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">
         
         <bean id="currencyConverter" class="com.spring.app.CurrencyConverter">
             <property name = "mObj">
               <map>
                    <entry value="65" key ="DOLLAR"/>
                    <entry value="80" key ="EURO"/>
                    <entry value="218" key ="DINAR"/>
                </map>
            </property>
        </bean>
   </beans>
